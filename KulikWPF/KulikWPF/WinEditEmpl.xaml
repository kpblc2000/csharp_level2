<Window x:Class="KulikWPF.WinEditEmpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KulikWPF"
        mc:Ignorable="d"
        Title="WinEditEmpl" Height="412.912" Width="489.698">
  <Grid x:Name="MainGrid">
    <Label Content="Имя" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="337"/>
    <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="22" Margin="15,38,0,0" TextWrapping="Wrap" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="332" TabIndex="1"/>
    <Button x:Name="btnOk" Content="OK" Height="20" Margin="10,75,344,0" VerticalAlignment="Top" Click="btnOk_Click" TabIndex="2"/>
    <Button x:Name="btnCancel" Content="Отмена" Height="20" Margin="143,75,211,0" VerticalAlignment="Top" IsCancel="True" Click="btnCancel_Click" TabIndex="3"/>

  </Grid>
</Window>
